<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="legion.dao.ProjectDao">
    
    <insert id="addProject" useGeneratedKeys="true" keyProperty="id">
        insert into project(pjname,state,planstart,planend,actualstart,actualend,pnow,leader,ctid)
         values (#{pjname},#{state},#{planstart},#{planend},#{actualstart},#{actualend},#{pnow},#{leader},#{ctid})
    </insert>

    <insert id="addimageurl" useGeneratedKeys="true" keyProperty="id">
        insert into pimage(projectid,imageurl)
         values (#{projectid},#{imageurl})
    </insert>

    <select id="listProject" resultType="Project">
          select * from project
           LIMIT #{page},10
    </select>

    <select id="listimageurl" parameterType="java.lang.String"  resultType="java.lang.String">
        select imageurl from pimage
        <where>
        <if test="projectid!=null">
            projectid = #{projectid}
        </if>
        </where>
    </select>

    <select id="listProjectById" resultType="Project">
        select * from project
        <where>
            <if test="id!=null">
                id=#{id}
            </if>
        </where>
    </select>


    <update id="updateProject" parameterType="Project">
        update project set
            pjname = #{pjname},
            state = #{state},
            pnow = #{pnow},
            planstart = #{planstart},
            planend = #{planstart},
            leader = #{leader},
            actualstart = #{actualstart},
            actualend = #{actualend},
            ctid = #{ctid}
        where
            id= #{id}
    </update>
    
    <delete id="deleteProject" parameterType="Integer" >
        delete from project where id = #{id}
    </delete>
</mapper>