<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="legion.dao.GoodsDao">
    
    <insert id="addProject" useGeneratedKeys="true" keyProperty="id">
        insert into project(name,state,plan_start,plan_end,actual_statr,actual_end,leader)
         values (#{name},#{state},#{plan_start},#{plan_end},#{actual_statr},#{actual_end},#{leader})
    </insert>

    <select id="listProject" resultType="Project">
          select * from project
    </select>
    
    <select id="listProjectById" resultType="Project">
        select * from project
        <where>
            <if test="id!=null">
                id=#{id}
            </if>
        </where>
    </select>


    <update id="updateProject" parameterType="Project">
        update project set
            name = #{name},
            state = #{state},
            plan_start = #{plan_start},
            plan_end = #{plan_start},
            leader = #{leader},
            actual_statr = #{actual_statr},
            actual_end = #{actual_end}
        where
            id= #{id}
    </update>
    
    <delete id="deleteProject" parameterType="Integer" >
        delete from project where id = #{id}
    </delete>
</mapper>